{
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "rules": {
        "indent": [2, 4],
        "no-new": 0,
        "comma-dangle": [2, 'never'],
        "global-require": 0,
        "no-underscore-dangle": 0,
        "new-cap": 0,
        "no-param-reassign": 0,
        "consistent-return": 0
    }
}
